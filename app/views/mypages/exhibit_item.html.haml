.header-a
  = render '/homes/header'
.item-detail-content

  %h1.item-detail-content__title
    = @item.name
  .item-detail-content__information
    .item-detail-content__information--pictures
      .item-detail-phone-big
        - @item.images.first(1).each do |image|
          = image_tag image.image.url, class: "item-detail-phone-big-main"
      .item-detail-phone-cells
        - @item.images.each do |image|
          =image_tag image.image.url, class: "item-detail-phone-cells-bits"
    .item-detail-content__information--list
      %table.item-detail-table(border = "1")
        %tr
          %th.item-th 出品者
          %td.item-td
            = @item.user.nickname
        %tr
          %th.item-th カテゴリー
          %td.item-td
            = @item.category.parent.parent.name
            .category-icon
            %span
              = @item.category.parent.name
            .category-icon
            %span
              = @item.category.name
        %tr
          %th.item-th ブランド
          %td.item-td
            = @item.brand.name
        %tr
          %th.item-th 商品のサイズ
          %td.item-td
            = @item.size
        %tr
          %th.item-th 商品の状態
          %td.item-td
            = @item.usage_status
        %tr
          %th.item-th 配送料の負担
          %td.item-td
            = @item.delivery_fee
        %tr
          %th.item-th 配送の方法
          %td.item-td
            = @item.delivery_way
        %tr
          %th.item-th 配送元地域
          %td.item-td
            = @item.user.address.prefectures
        %tr
          %th.item-th 発送日の目安
          %td.item-td
            = @item.shipping_date

  .item-price-box
    %span.item-price-box__price
      = "¥#{@item.price.to_s(:delimited)}"
    %span.item-price-box__tax (税込)
    %span.item-price-box__postage 着払い

  .item-description
    %p
      = @item.description

- if @item.selling_status == "3"
  .mypage_item_sold
    .mypage_item_sold__message 売り切れ
-else
  .mypage_item_edit
    .mypage_item_edit__btns
      %button{class: "btn-default mypage_item_edit__btns--edit"}商品の編集
      %p.mypage_item_edit__btns--or or
      - if @item.selling_status == "4"
        = link_to sellnow_mypage_index_path, method: :patch do
          %button{class: "btn-default mypage_item_edit__btns--stop"}出品を再開する
      - else
        = link_to sellstop_mypage_index_path, method: :patch do
          %button{class: "btn-default mypage_item_edit__btns--stop"}出品を一旦停止する
      %button#modal-open-btn この商品を削除する
      #overlay
        #modalWindow
          .modal-message-box
            %div 確認
            %div 本当に削除しますか？
          %button#modal-close-btn キャンセル
          = link_to item_path, method: :DELETE, id: 'item-delete-btn' do
            %button#delete-comformation-btn 削除する
= render 'items/chat'
= render 'homes/footer'
= render "/homes/postitem"
