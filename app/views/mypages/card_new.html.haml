%body

.header-a
  = render '/homes/header'
  - breadcrumb :card_new
  = render "layouts/breadcrumbs"
.contents
  .main-mypage
    %h2.l-single-inner_registration
      クレジットカード情報入力
    = form_tag(pay_creditcards_path, method: :post, id:'charge-form',  name: "inputForm") do
      - required = '必須'
      .creditcard_information
        .field
          .field-label
            %label.field-label-text カード番号
            %span.min #{required}
            = text_field_tag "number", "", class:"input-text_cardnum", placeholder:'半角数字のみ', type: "text", id: "card_number"
            %div
              =image_tag "visa.svg", height: '20', width: '40'
              =image_tag "master-card.svg", height: '20', width: '40'
              =image_tag "saison-card.svg", height: '20', width: '35'
              =image_tag "jcb.svg", height: '20', width: '40'
              =image_tag "american_express.svg", height: '20', width: '20'
              =image_tag "diners_logo_white.gif", height: '20', width: '30'
              =image_tag "discover.svg", height: '20', width: '40'
        .field-creditcard
          .field-label
            %label.field-label-text 有効期限
            %span.min #{required}
          .field-input-expiring
            .select-wrapper
              = select_tag "exp_month", options_from_collection_for_select(@month, :value, :name), class:"input-text input-text-date", id: "exp_month"
              %i.fas.fa-chevron-down.creditcard-pulldown
            %span.exp-date 月
            .select-wrapper
              = select_tag "exp_year", options_from_collection_for_select(@year, :value, :name), class:"input-text input-text-date", id: "exp_year"
              %i.fas.fa-chevron-down.creditcard-pulldown
            %span.exp-date 年
        .field-creditcard
          .field-label
            %label.field-label-text セキュリティコード
            %span.min #{required}
          .field-input
            = text_field_tag "cvc", "", class:"input-text_cardnum", placeholder: 'カード背面４桁もしくは３桁の番号',id: "cvc"
        .field-creditcard
          .field-input
            #card_token
            = submit_tag "次へ進む" , name:"next_submit", class:"creditcard-submit",id: "token_submit"
        .destory_wall
  = render "sidebar"
= render "/homes/footer"
= render "/homes/postitem"