- required = '必須'
.header-signup
  .header-signup__left
    = link_to root_path do
      = image_tag 'fmarket_logo_red.svg', class: "header-signup__left--logo"
  .header-signup__right
    %ol.step-bar
      %li.step-bar__block{style: 'color: #ea352d;'}
        会員情報
        %br
        %span.point4-1
      %li.step-bar__block{style: 'color: #ea352d;'}
        電話番号認証
        %br
        %span.point4-2
      %li.step-bar__block{style: 'color: #ea352d;'}
        お届け先住所入力
        %br
        %span.point4-3
      %li.step-bar__block{style: 'color: #ea352d;'}
        支払い方法
        %br
        %span.point4-4
      %li.step-bar__block
        完了
        %br
        %span.point4-5
.single-main
  %section.l-single-container
    %h2.l-single-inner_registration
      支払い方法
    = form_tag(pay_creditcards_path, method: :post, id:'charge-form',  name: "inputForm") do
      .creditcard_information
        .field-creditcard
          .field-label
            %label カード番号
            %span.min #{required}
            = text_field_tag "number", "", class:"input-text_cardnum", placeholder:'半角数字のみ', type: "text", id: "card_number"
            %div
              =image_tag "visa.svg", height: '20', width: '40'
              =image_tag "master-card.svg", height: '20', width: '40'
              =image_tag "saison-card.svg", height: '20', width: '35'
              =image_tag "jcb.svg", height: '20', width: '40'
              =image_tag "american_express.svg", height: '20', width: '20'
              =image_tag "diners_logo_white.gif", height: '20', width: '30'
              =image_tag "discover.svg", height: '20', width: '40'
        .field-creditcard
          .field-label
            %label 有効期限
            %span.min #{required}
            .field-input
          .field-input-expiring
            .select-wrapper
              = select_tag "exp_month", options_from_collection_for_select(@month, :value, :name), class:"input-text", id: "exp_month"
              .select-arrow
                %i.fas.fa-chevron-down
            %span.exp-date 月
            .select-wrapper
              = select_tag "exp_year", options_from_collection_for_select(@year, :value, :name), class:"input-text", id: "exp_year"
              .select-arrow
                %i.fas.fa-chevron-down
            %span.exp-date 年
        .field-creditcard
          .field-label
            %label セキュリティコード
            %span.min #{required}
          .field-input
            = text_field_tag "cvc", "", class:"input-text_cardnum", placeholder: 'カード背面４桁もしくは３桁の番号',id: "cvc"
        .field-creditcard
          .field-input
            #card_token
            = submit_tag "次へ進む" , name:"next_submit", class:"creditcard-submit",id: "token_submit"
        .destory_wall
= render 'signups/footer'