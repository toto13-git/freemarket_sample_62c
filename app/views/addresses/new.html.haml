%header.single-header
  %h1
    %a 画像リンク
  %nav.progress-bar_signup-bar
    %ol.clearfix
      %li headerのバー
%main.single-main
  %section.l-single-container
    %h2.l-single-inner_registration
      住所入力
    = form_for @address, url: new_address_path do |f|
      - required = '必須'
      - optional = '任意'
      .user_address
        .field
          .field-label
            = f.label :"お名前(全角)"
            %span.min #{required}
          .field-input
            = f.text_field :lastname, placeholder: '例）佐藤'
            = f.text_field :firstname, placeholder: '例）太郎'
        .field
          .field-label
            = f.label :"お名前カナ(全角)"
            %span.min #{required}
          .field-input
            = f.text_field :lastname_kana, placeholder: '例）サトウ'
            = f.text_field :firstname_kana, placeholder: '例）タロウ'
        .field
          .field-label
            = f.label :"郵便番号"
            %span.min #{required}
          .field-input
            = f.text_field :postcode, placeholder: '例）123-4567'
        .field
          .field-label
            = f.label :"都道府県"
            %span.min #{required}
          .field-input
            = f.select :prefectures, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"]
        .field
          .field-label
            = f.label :"市区町村"
            %span.min #{required}
          .field-input
            = f.text_field :city, placeholder: '例）横浜市緑区'
        .field
          .field-label
            = f.label :"番地"
            %span.min #{required}
          .field-input
            = f.text_field :street_num, placeholder: '例）青山1-1-1'
        .field
          .field-label
            = f.label :"建物名"
            %span.nin #{optional}
          .field-input
            = f.text_field :building, placeholder: '例）エスポワール号45'
        .field
          .field-label
            = f.label :"電話"
            %span.nin #{optional}
          .field-input
            = f.text_field :home_call_num, placeholder: '09012345678'
%footer
